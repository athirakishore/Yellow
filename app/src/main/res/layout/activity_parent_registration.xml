<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/common_google_signin_btn_text_dark_normal"
    tools:context="com.example.user.yellowridesafety.ParentRegistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parent Registration"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nametxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/studenttxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="StudentAdmissionNo"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/admnoEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addrestxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="HouseName"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/adresEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/agetxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gendertxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="15dp" />
        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MALE" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEMALE" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phntxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Phone No"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usernametxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/userEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/passwordtxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cnfpasswordtxt"
            android:layout_width="119dp"
            android:layout_height="46dp"
            android:text="CONFIRM PASSWORD"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/cnfpassEditText"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regButton"
            android:text="REGISTER"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/canButton"
            android:text="CANCEL"/>

    </LinearLayout>
    </LinearLayout>


</ScrollView>